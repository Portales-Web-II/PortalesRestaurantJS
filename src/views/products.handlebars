{{! Header }}
<div class="p-5 text-center bg-image" style="
      background-image: url('/assets/img/menu.jpg');
      height: 400px;">
  <div class="mask" style="background-color: rgba(0, 0, 0, 0.6);">
    <div class="d-flex justify-content-center align-items-center h-100">
      <div class="text-white">
        <h1 class="mb-3">Menu</h1>
        <h4 class="mb-3">Podras elegir entre una gran variedad de platillos</h4>
      </div>
    </div>
  </div>
</div>

<!-- Linea separadora entre contenedores -->
<div class="container-fluid" style="width: 90%;">
  <br>
  <hr style="color: black;">
  <br>
</div>
<!-- Linea separadora entre contenedores -->

<div class="container-fluid" style="width: 85%;">
  <div class="row row-cols-1 row-cols-md-2 g-4">
    {{#each listaProductos}}
    <div class="col">
      <div class="card hover-shadow text-center">
        <div class="p-5 text-center bg-image" style="
      background-image: url('{{imagen}}');
      height: 400px;">
        </div>
        <div class="card-body">
          <h5 class="card-title">{{nombre}}</h5>
          <h5 class="card-title">Lps. {{precio}}</h5>
          <p class="card-text">{{descripcion}}</p>
          {{!-- Datos Importantes del producto --}}
          <form action="vistaMenus.php" method="POST">
            <input name="ID" type="hidden" id="ID" value="{{idProducto}}" />
            <input name="Nombre" type="hidden" id="Nombre" value="{{nombre}}" />
            <input name="Cantidad" type="hidden" id="Cantidad" value="1" />
            <input name="Precio" type="hidden" id="Precio" value="{{precio}}" />
            <input name="Imagen" type="hidden" id="Precio" value="{{imagen}}" />
            <input name="Descripcion" type="hidden" id="Precio" value="{{descripcion}}" />
            <button type="submit" value="Agregar" name="btnAgregar" class="btn btn-primary btn-rounded">Agregar al
              carrito</button>
          </form>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>