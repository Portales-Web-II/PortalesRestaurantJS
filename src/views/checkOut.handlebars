<div class="p-5 text-center bg-image" style="
      background-image: url('/assets/img/checkout.jpg');
      height: 400px;">
    <div class="mask" style="background-color: rgba(0, 0, 0, 0.6);">
        <div class="d-flex justify-content-center align-items-center h-100">
            <div class="text-white">
                <h1 class="mb-3">Pago</h1>
                <h4 class="mb-3">Estas a punto de recibir tu platillo favorito.</h4>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <p class="fs-2">Detalles de facturación</p>
                        <form class="row g-3 needs-validation" novalidate>
                            <div class="col-md-4">
                                <div class="form-outline">
                                    <input type="text" class="form-control" id="validationCustom01" value="" required />
                                    <label for="validationCustom01" class="form-label">Nombre</label>
                                    <div class="valid-feedback">Looks good!</div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-outline">
                                    <input type="text" class="form-control" id="validationCustom02" value="" required />
                                    <label for="validationCustom02" class="form-label">Apellido</label>
                                    <div class="valid-feedback">Looks good!</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-outline">
                                    <input type="text" class="form-control" id="validationCustom03" required />
                                    <label for="validationCustom03" class="form-label">Número de teléfono</label>
                                </div>
                            </div>
                            <div class="form-outline">
                                <textarea class="form-control" id="validationTextarea" required></textarea>
                                <label for="validationTextarea" class="form-label">Dirección de entrega</label>
                            </div>
                            <p class="fs-4">Método de pago</p>
                            <div class="form-check">
                                <input type="radio" class="form-check-input" id="validationFormCheck2"
                                    name="radio-stacked" required />
                                <label class="form-check-label" for="validationFormCheck2">Efectivo</label>
                            </div>
                            <div class="form-check mb-3">
                                <input type="radio" class="form-check-input" id="validationFormCheck3"
                                    name="radio-stacked" required />
                                <label class="form-check-label" for="validationFormCheck3">Tarjeta de
                                    credito/debito</label>
                                <div class="invalid-feedback">Debe seleccionar al menos un método de pago</div>
                            </div>
                            <div class="pagoEfectivo">
                                <div class="form-outline">
                                    <input type="text" class="form-control" id="validationCustom02" value="" required />
                                    <label for="validationCustom02" class="form-label">¿Necesitas cambio?</label>
                                    <div class="valid-feedback">Looks good!</div>
                                </div>
                            </div>
                            <div class="pagoTarjeta">

                            </div>
                            <div class="col-12">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="invalidCheck"
                                        required />
                                    <label class="form-check-label" for="invalidCheck">Estoy de acuerdo con los terminos
                                        y condiciones</label>
                                    <div class="invalid-feedback">Debes estar de acuerdo antes de realizar el pago.
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary" type="submit">Realizar pago</button>
                            </div>
                        </form>
                    </div>
                    <div class="col">
                        <p class="fs-2">Información adicional</p>
                        <form>
                            <div class="mb-3 pb-1">
                                <div class="form">
                                    <textarea class="form-control" id="validationTextarea"
                                        placeholder="Escriba las notas de su orden" required></textarea>
                                    <label for="validationTextarea" class="form-label">Notas de la orden</label>
                                    <div class="invalid-feedback">Please enter a message in the textarea.</div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>