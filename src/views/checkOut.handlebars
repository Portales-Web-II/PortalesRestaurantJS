<div class="p-5 text-center bg-image" style=" background-image: url('/assets/img/checkout.jpg'); height: 400px;">
    <div class="mask" style="background-color: rgba(0, 0, 0, 0.6);">
        <div class="d-flex justify-content-center align-items-center h-100">
            <div class="text-white">
                <h1 class="mb-3">Pago</h1>
                <h4 class="mb-3">Estas a punto de recibir tu platillo favorito.</h4>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md">
            <div class="container">
                <div class="row">
                    <div class="border col">
                        <p class="fs-2">Detalles de facturación</p>
                        <form id="facturaForm" class="row g-3 needs-validation" novalidate>
                            <p class="fs-4">Información personal</p>
                            <div class="col-md-4">
                                <div class="form-outline">
                                    <input type="text" class="form-control" id="nombreCli" value="" required />
                                    <label for="validationCustom01" class="form-label">Nombre</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-outline">
                                    <input type="text" class="form-control" id="apellidoCli" value="" required />
                                    <label for="validationCustom02" class="form-label">Apellido</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-outline">
                                    <input type="text" class="form-control" id="telefonoCli" value="" required />
                                    <label for="validationCustom03" class="form-label">Número de teléfono</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-outline">
                                    <input type="text" class="form-control" id="total" value="" required />
                                    <label for="validationCustom03" class="form-label">Total</label>
                                </div>
                            </div>
                            <div class="form-outline">
                                <textarea class="form-control" id="direccionCli" value="" required></textarea>
                                <label for="validationTextarea" class="form-label">Dirección de entrega</label>
                            </div>
                            <p class="fs-4">Método de pago</p>
                            <ul class="nav nav-tabs" id="myTab" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link active" id="home-tab" data-bs-toggle="tab"
                                        data-bs-target="#home" type="button" role="tab" aria-controls="home"
                                        aria-selected="true">Efectivo</button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" id="profile-tab" data-bs-toggle="tab"
                                        data-bs-target="#profile" type="button" role="tab" aria-controls="profile"
                                        aria-selected="false">Tarjeta de crédito/debito</button>
                                </li>
                            </ul>
                            <div class="tab-content" id="myTabContent">
                                <div class="tab-pane fade show active" id="home" role="tabpanel"
                                    aria-labelledby="home-tab">
                                    <input type="text" class="form-control" id="validationCustom02" value="" required />
                                    <label for="validationCustom02" class="form-label">¿Necesitas cambio?</label>
                                    <div class="valid-feedback">Looks good!</div>
                                </div>
                                <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                                    <ul class="mb-0 list-inline mt-3">
                                        <li class="list-inline-item">
                                            <div class="bg-image hover-overlay ripple">
                                                <img src="/assets/img/visa.png" class="img-fluid"
                                                    style="height: 50px;" />
                                                <a href="#!">
                                                    <div class="mask" style="background-color: rgba(0, 0, 0, 0.367);">
                                                    </div>
                                                </a>
                                            </div>
                                        </li>
                                        <li class="list-inline-item">
                                            <div class="bg-image hover-overlay ripple">
                                                <img src="/assets/img/mastercard.png" class="img-fluid"
                                                    style="height: 60px;" />
                                                <a href="#!">
                                                    <div class="mask" style="background-color: rgba(0, 0, 0, 0.367);">
                                                    </div>
                                                </a>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                    </div>
                    <div class="border col">
                        <p class="fs-3">Información adicional</p>
                        <div class="mb-3 pb-1">
                            <div class="form">
                                <textarea class="form-control" id="validationTextarea"
                                    placeholder="Escriba las notas de su orden" required></textarea>
                                <label for="validationTextarea" class="form-label">Notas de la orden</label>
                                <div class="invalid-feedback">Please enter a message in the textarea.</div>
                            </div>
                        </div>
                        <div class="container-fluid">
                            <p class="fs-2 text-center">Tu orden</p>
                            <table class="table table-hover table-bordered table-striped">
                                <thead>
                                    <tr class="table-dark">
                                        <td>Producto</td>
                                        <td>Cantidad</td>
                                        <td>Total</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each listaDetalle}}
                                    <tr>
                                        <td>{{nombre}}</td>
                                        <td>{{cantidad}}</td>
                                        <td>{{precio}}</td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                        <div class="d-flex align-items-center justify-content-center" style="height: 150px;">
                            <button class="btn btn-primary" type="submit">Confirmar pedido</button>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>